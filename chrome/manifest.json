{
  "manifest_version": 3,
  "name": "ScrollSaber",
  "version": "1.1",
  "description": "Transforms your scrollbar into a beam sword.",
  "icons": {
    "48": "icons/scrollsaber-48.svg"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["scrollsaber.css"],
      "js": ["scrollsaber.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icons/scrollsaber-48.svg"
  },
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
    {
      "resources": ["sounds/eject.ogg", "sounds/retract.ogg"],
      "matches": ["<all_urls>"]
    }
  ]
}
